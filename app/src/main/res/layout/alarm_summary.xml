<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Alarm Summary"
        android:id="@+id/alarm_txt"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:id="@+id/alarminfo"
        android:background="@drawable/ic_severity_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="121dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_marginTop="62dp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/alarminfo"
        android:layout_centerHorizontal="true"
        android:textStyle="normal" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:id="@+id/alarmCritical"
        android:background="@drawable/ic_severity_critical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/alarm_txt"
        android:layout_alignLeft="@+id/alarm_txt"
        android:layout_alignStart="@+id/alarm_txt"
        android:layout_marginTop="87dp" />





    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:id="@+id/alarmMajor"
        android:background="@drawable/ic_severity_major"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignTop="@+id/alarmWarning"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1" />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:id="@+id/alarmMinor"
        android:background="@drawable/ic_severity_minor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignTop="@+id/alarmCritical"
        android:layout_alignRight="@+id/alarm_txt"
        android:layout_alignEnd="@+id/alarm_txt" />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text=""
        android:id="@+id/alarmWarning"
        android:background="@drawable/ic_severity_minor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Critical"
        android:id="@+id/text1"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_below="@+id/alarmMinor"
        android:layout_alignLeft="@+id/alarmCritical"
        android:layout_alignStart="@+id/alarmCritical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/text1"
        android:layout_alignLeft="@+id/alarmMinor"
        android:layout_alignStart="@+id/alarmMinor"
        android:textStyle="normal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major"
        android:id="@+id/textView3"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_below="@+id/alarmMajor"
        android:layout_alignRight="@+id/alarmMajor"
        android:layout_alignEnd="@+id/alarmMajor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minor"
        android:id="@+id/textView4"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_below="@+id/alarmWarning"
        android:layout_alignRight="@+id/alarmWarning"
        android:layout_alignEnd="@+id/alarmWarning" />


</RelativeLayout>